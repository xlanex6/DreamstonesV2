<% content_for :meta_title, "Architect & builders for #{@project.title.downcase} project" %>
<% content_for :meta_description, @project.text %>
<% content_for :meta_image, @project.photo.path %>
<% content_for :robots, 'index, follow' %>

<div class="banner banner-project-show"
  style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.6) 0%, rgba(0,0,0,0.6) 40%), url( <%= @project.photo.fullpath%> );">
  <div class="banner-content">
    <h1>Architects & Builders</br>for your <span class="project-show-title"><%= @project.title.downcase %></span> project</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="project-type">
        <%= image_tag "renovation-project.png"%>
        <p>RENOVATION PROJECT</p>
      </div>
      <div class="project-text-content">
        <h2>Your <%= @project.title %> project in France</h2>
        <p><%= simple_format(@project.text) %></p>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="project-text-form text-center">
<div class="typeform-widget" data-url="https://dreamstones.typeform.com/to/BrA63A" style="width: 100%; height: 550px;" > </div> <script> (function() { var qs,js,q,s,d=document, gi=d.getElementById, ce=d.createElement, gt=d.getElementsByTagName, id="typef_orm", b="https://embed.typeform.com/"; if(!gi.call(d,id)) { js=ce.call(d,"script"); js.id=id; js.src=b+"embed.js"; q=gt.call(d,"script")[0]; q.parentNode.insertBefore(js,q) } })() </script>

      </div>
    </div>
  </div>
</div>

<%= render 'shared/single-point-contact' %>
<%= render 'shared/home-features' %>
<div class="container">
  <div class="row">
    <div class="lastest-project-cards">
      <h3><%= t(:last_project) %></h3>
      <% @portofolios.each do |last_project| %>
        <%= render partial: "shared/last-projects", locals: {last_project: last_project} %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h3 class="text-center"><%= t(:testomial_project_title) %></h3>
    <% @testimonials.each do |testimonial|  %>
      <div class="col-xs-12 col-md-6">
        <div class="testi-card">
          <div class="testi-card-content">
            <p>"<%= testimonial.text %>"</p>
          </div>
          <div class="testi-card-name">
            <h3><%= testimonial.author %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
