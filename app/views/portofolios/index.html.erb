<div class="container">
  <div class="row">
    <div class="project-cards">
      <% @portofolios.each do |last_project| %>
        <%= link_to '', class: 'prob', data: { toggle:"modal", target: "#galerry-modal"} do %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="project-card-global">
              <div class="project-card" style="background-image: linear-gradient( -225deg ,rgba(0,0,0,0.4), rgba(0,0,0,0.4) ), url('<%= cl_image_path last_project.main_picture.path, height: 189, width: 295, crop: :fill %>');">
                  <div class="project-title">
                    <h3><%= last_project.title %></h3>
                  </div>
                <div class="project-category">
                  <span><%= image_tag "#{icon_category(last_project.category)}-home.png" %> <%= last_project.category %></span>
                </div>
                <div class="project-size">
                  <span><%= last_project.size %> mÂ²</span>
                </div>
                <div class="project-area">
                  <span><%= image_tag 'france-raw.png'%> <%= last_project.area %></span>
                </div>
              </div>
              <div class="overlay">
                <h3>See</br>more pictures<br/><i class="fa fa-picture-o"></i></h3>
              </div>
            </div>
          </div>
        <% end %>
        <div class="modal fade" id="galerry-modal" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span><%= last_project.title %></span>
                <div id="carousel-last-project" class="carousel slide" data-ride="carousel">
                  <ol class="carousel-indicators">
                    <% indicator_generation(last_project.photos.count).each do |item| %>
                      <li data-target="#carousel-last-project" data-slide-to="<%= item %>"></li>
                    <% end %>
                  </ol>
                  <div class="carousel-inner" role="listbox">
                      <div class="item active">
                        <%= cl_image_tag last_project.photos.first.path, width: 500, height: 500, crop: :fill%>
                      </div>
                    <% last_project.photos.all[1..-1].each do |photo| %>
                      <div class="item">
                        <%= cl_image_tag photo.path, width: 500, height: 500, crop: :fill%>
                      </div>
                    <% end %>
                  </div>
                  <a class="left carousel-control" href="#carousel-last-project" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#carousel-last-project" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
